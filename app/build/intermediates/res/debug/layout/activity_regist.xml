<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_bg"
    android:orientation="vertical" >

    <include layout="@layout/layout_titlebar" />
        <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_aboutus_n"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_bg_inpu"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:paddingTop="16dp" >
   <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                 android:gravity="center_vertical"
                   android:layout_marginBottom="7dp"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="姓        名:"
                    android:textSize="16.0sp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入用户名"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
            <View 
                 android:layout_width="fill_parent"
                 android:layout_height="1dp"
                 android:background="@drawable/icon_line"/>
            <LinearLayout
                android:layout_width="match_parent"
               android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                 android:gravity="center_vertical"
                 android:layout_marginTop="7dp"
                android:layout_weight="1" >

                <TextView
                     android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="手        机:"
                     android:textSize="16.0sp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/etMobile"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:hint="请输入手机号"
                    android:background="@null"
                    android:textColor="@color/black"
                    android:inputType="phone"
                    android:textSize="14sp" />
            </LinearLayout>
  <View 
                 android:layout_width="fill_parent"
                 android:layout_height="1dp"
                 android:layout_marginTop="6dp"
                 android:layout_marginBottom="6dp"
                 android:background="@drawable/icon_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                   android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                 android:gravity="center_vertical"
                android:layout_marginTop="7dp"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="密        码:"
                     android:textSize="16.0sp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/etPass"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:hint="请输入登录密码"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
              <View 
                 android:layout_width="fill_parent"
                 android:layout_height="1dp"
                 android:layout_marginTop="6dp"
                 android:layout_marginBottom="6dp"
                 android:background="@drawable/icon_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                 android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                 android:gravity="center_vertical"
                android:layout_marginTop="7dp"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="确认密码:"
                     android:textSize="16.0sp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/etPassRep"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:hint="请再次输入确认密码"
                    android:textSize="14sp" />
            </LinearLayout>
         <View 
                 android:layout_width="fill_parent"
                 android:layout_height="1dp"
                 android:layout_marginTop="6dp"
                 android:layout_marginBottom="6dp"
                 android:background="@drawable/icon_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                 android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                 android:gravity="center_vertical"
                android:layout_marginTop="7dp"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="验  证  码:"
                     android:textSize="16.0sp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/etCode"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:hint="请输入验证码"
                    android:background="@null"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_red"
            android:text="@string/submit"
              android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/android/Desktop/BestHome2/app/src/main/res/layout/activity_regist.xml -->